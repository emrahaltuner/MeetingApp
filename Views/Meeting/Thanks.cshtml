@model UserInfo
@{
ViewBag.Title = "Başvuru Durumu";
}
<h1 class="h4">Başvuru Durumu</h1>

@if(Model.WillAttend==true){
<p>Teşekkürler @Model.Name sizinle beraber @ViewBag.UserCount kişi katılıyor</p>
<a class="btn btn-sm btn-outline-primary" href="/meeting/list">Katılımcıların listesi</a>
}else{
<p>@Model.Name, Katılamadığından dolayı üzgünüz</p>
<a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Başvuru Formu</a>

}